{
  "sound": true,
  "notification": true,
  "timeout": 5,
  "showProjectName": true,
  "showSessionTitle": false,
  "showIcon": true,
  "notificationSystem": "osascript",
  "command": {
    "enabled": false,
    "path": "/path/to/command",
    "args": [
      "--event",
      "{event}",
      "--message",
      "{message}"
    ],
    "minDuration": 0
  },
  "events": {
    "permission": {
      "sound": true,
      "notification": true
    },
    "complete": {
      "sound": false,
      "notification": true
    },
    "subagent_complete": {
      "sound": false,
      "notification": false
    },
    "error": {
      "sound": true,
      "notification": true
    },
    "question": {
      "sound": true,
      "notification": true
    }
  },
  "messages": {
    "permission": "Session needs permission: {sessionTitle}",
    "complete": "Session has finished: {sessionTitle}",
    "subagent_complete": "Subagent task completed: {sessionTitle}",
    "error": "Session encountered an error: {sessionTitle}",
    "question": "Session has a question: {sessionTitle}"
  },
  "sounds": {
    "permission": "/usr/lib/opencode/plugins/opencode-notifier/sounds/permission.wav",
    "complete": "/usr/lib/opencode/plugins/opencode-notifier/sounds/complete.wav",
    "subagent_complete": "/usr/lib/opencode/plugins/opencode-notifier/sounds/subagent_complete.wav",
    "error": "/usr/lib/opencode/plugins/opencode-notifier/sounds/error.wav",
    "question": "/usr/lib/opencode/plugins/opencode-notifier/sounds/question.wav"
  },
  "volumes": {
    "permission": 1,
    "complete": 1,
    "subagent_complete": 1,
    "error": 1,
    "question": 1
  }
}